<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CareGiver">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Add CareGiver"
        android:textSize="27sp"
        android:layout_gravity="center"
        android:layout_marginStart="15dp"
        android:textStyle="bold"
        android:textColor="@color/light_black"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="300dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        app:boxStrokeColor="#000"
        android:textColorHint="@color/light_black"
        app:boxBackgroundMode="none"
        app:startIconDrawable="@drawable/name"
        app:startIconTint="#000"
        app:hintTextColor="@color/light_black"
        app:hintTextAppearance="@style/CustomHintStyle"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            android:textStyle="normal"
            android:textColor="#000"
            android:inputType="text"
            android:hint="Name" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="300dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        app:boxStrokeColor="#000"
        android:textColorHint="@color/light_black"
        app:boxBackgroundMode="none"
        app:hintAnimationEnabled="true"
        app:startIconDrawable="@drawable/username"
        app:startIconTint="#000"
        app:hintTextColor="@color/light_black"
        app:hintTextAppearance="@style/CustomHintStyle"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/username"
            android:textStyle="normal"
            android:textColor="#FF7043"
            android:hint="Username"
            android:textColorHint="#FF7043"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="300dp"
        android:layout_margin="10dp"
        app:boxStrokeColor="#000"
        android:layout_gravity="center"
        android:textColorHint="@color/light_black"
        app:boxBackgroundMode="none"
        app:startIconDrawable="@drawable/lock"
        app:startIconTint="#000"
        app:endIconMode="password_toggle"
        app:endIconTint="#000"
        app:hintTextColor="@color/light_black"
        app:hintTextAppearance="@style/CustomHintStyle"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/password"
            android:textColor="#000"
            android:inputType="textPassword"
            android:hint="Password"
            android:textStyle="normal"
            android:textColorHint="@color/light_black"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="300dp"
        android:layout_margin="10dp"
        app:boxStrokeColor="#000"
        android:layout_gravity="center"
        android:textColorHint="@color/light_black"
        app:hintTextColor="@color/light_black"
        app:hintTextAppearance="@style/CustomHintStyle"
        app:boxBackgroundMode="none"
        app:startIconDrawable="@drawable/baseline_email_24"
        app:startIconTint="#000"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/email"
            android:textColor="#000"
            android:textStyle="normal"
            android:inputType="textEmailAddress"
            android:hint="Email"
            android:textColorHint="@color/light_black"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/btn"
        android:text="ADD"
        android:textColor="#FFFFFF"
        android:layout_marginTop="30dp"
        android:backgroundTint="#0ac690"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

    </LinearLayout>

</LinearLayout>
